<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageslider"
            tools:context=".BerandaFragment">

        <LinearLayout
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/profilnagari"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/profil"/>
                    <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/hitam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROFIL NAGARI "/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/lembaga"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/lembaga"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/hitam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEMBAGA "/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/potensinagari"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/potensidesa"/>
                    <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/hitam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POTENSI NAGARI"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/video"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/videodua"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/hitam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIDEO"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/privacypolicy"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/privacy"/>
                    <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/hitam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PRIVACY POLICY"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/tentang"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/about"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/hitam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TENTANG"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
