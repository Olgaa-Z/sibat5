<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView
            android:id="@+id/kontak"
            android:text="Kontak"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/kontak2"
            android:text="Desa Lauwba
Jl.KusumaNegara no.224 Umbul Harjo
Telp: 0274-367228


Aduan Masyarakat"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/kontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:layout_centerVertical="true"
            android:hint="Aduan"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:id="@+id/aduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/buttonaduan"
            android:text="KIRIM ADUAN"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/colorAccent"
            android:layout_below="@+id/kontak2"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

</RelativeLayout>